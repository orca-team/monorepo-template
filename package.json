{
  "private": true,
  "name": "monorepo-template",
  "description": "monorepo template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:serve": "http-server docs-dist --spa",
    "build": "npm run pub:only && npm run docs:build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "c": "changeset && changeset version",
    "pub:only": "npm run test && changeset publish",
    "pub": "npm run pub:only && git push",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "lint-staged": "lint-staged",
    "test": "pnpm --filter=@orca-fe/* run test ",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.1.4",
    "@changesets/cli": "^2.26.1",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/react-router": "^5.1.20",
    "ahooks": "^3.7.7",
    "antd": "^5.5.2",
    "babel-plugin-import": "^1.13.6",
    "classnames": "^2.3.2",
    "dumi": "^2.2.1",
    "father": "^4.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "moment": "^2.29.4",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.2",
    "typescript": "^5.1.3",
    "@orca-fe/eslint-config": "^2.3.3",
    "@orca-fe/jss-plugin-auto-prefix": "^0.0.1",
    "@orca-fe/simple-jss": "^0.0.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "jss": "^10.10.0",
    "ts-node": "^10.9.1"
  }
}
